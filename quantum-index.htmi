<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TRUVANI AI - Quantum News Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        /* --------------------- */
        /* 1. Root Variables */
        /* --------------------- */
        :root {
            --primary-color: #e63946;
            --ai-color: #00d4ff;
            --neon-glow: 0 0 20px rgba(0, 212, 255, 0.5);
            --dark-bg: #0a0a0a;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--dark-bg);
            color: white;
            overflow-x: hidden;
        }

        /* --------------------- */
        /* 2. Header & Search Integration */
        /* --------------------- */
        .cyber-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            border-bottom: 2px solid var(--ai-color);
            box-shadow: 0 0 30px rgba(0, 212, 255, 0.3);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            font-size: 42px;
            font-weight: bold;
            background: linear-gradient(45deg, var(--primary-color), var(--ai-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 20px rgba(0, 212, 255, 0.5);
        }

        .header-controls {
            display: flex; 
            align-items: center; 
            gap: 15px;
        }

        .search-container {
            position: relative;
            background: rgba(255,255,255,0.1); 
            padding: 10px 20px; 
            border-radius: 25px; 
            display: flex; 
            align-items: center;
        }

        .search-container input {
            background: none; 
            border: none; 
            color: white; 
            outline: none; 
            width: 200px; 
            padding-right: 10px;
        }
        
        /* Voice Button Integrated */
        .voice-btn-integrated {
            background: var(--ai-color);
            color: black;
            border: none;
            padding: 5px 10px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }
        
        .voice-btn-integrated:hover {
            background: #00b8e6;
            transform: scale(1.1);
        }

        /* AI Assistant (Kept as Floating Button) */
        .ai-assistant {
            position: fixed;
            bottom: 30px;
            right: 30px;
            /* ... rest of the AI Assistant styles ... */
            width: 70px;
            height: 70px;
            background: var(--ai-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            cursor: pointer;
            box-shadow: var(--neon-glow);
            z-index: 1000;
            animation: float 3s ease-in-out infinite;
            transition: all 0.3s;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        /* Toast Container */
        #toastContainer {
            position: fixed; 
            top: 20px; 
            right: 20px; 
            z-index: 2000;
        }
        
        .toast {
            background: rgba(0, 0, 0, 0.9);
            color: white;
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            min-width: 300px;
            border-left: 5px solid var(--ai-color);
            opacity: 0;
            transform: translateX(100%);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        .toast-show {
            opacity: 1;
            transform: translateX(0);
        }

        .toast-title {
            font-weight: bold;
            color: var(--ai-color);
            margin-bottom: 5px;
        }
        
        .toast.success { border-color: #00ff88; }
        .toast.error { border-color: #ff4444; }

        /* Remaining Styles (Ticker, Grid, Panels) remain the same */

        .ai-ticker { /* ... */ }
        .news-grid { /* ... */ }
        .news-card-3d:hover { /* ... */ }
        /* ... rest of the original styles ... */
        
        /* Voice Command box is removed from fixed position */
    </style>
</head>
<body>
    <div id="toastContainer"></div>
    
    <div class="ai-assistant" onclick="toggleAIPanel()">
        ü§ñ
    </div>

    <header class="cyber-header">
        <div style="max-width: 1200px; margin: 0 auto; padding: 20px; display: flex; justify-content: space-between; align-items: center;">
            <div>
                <div class="logo">TRUVANI AI</div>
                <div style="color: var(--ai-color); font-size: 14px; margin-top: -5px;">Quantum News Platform</div>
            </div>
            <div class="header-controls">
                <div class="search-container">
                    <input type="text" placeholder="üîç AI Search..." id="aiSearchInput">
                    <button class="voice-btn-integrated" onclick="startVoiceSearch()">
                        <i class="fas fa-microphone"></i>
                    </button>
                </div>
                <button style="background: var(--ai-color); color: black; padding: 12px 25px; border-radius: 25px; border: none; font-weight: bold; cursor: pointer;">
                    <i class="fas fa-cog"></i> Quantum Admin
                </button>
            </div>
        </div>
    </header>

    <div class="ai-ticker">
        <div class="ticker-content">
            <div class="ticker-item">ü§ñ AI ANALYSIS: Market trends predict 89% accuracy</div>
            <div class="ticker-item">üîÆ QUANTUM COMPUTING: Breaking news in tech</div>
            <div class="ticker-item">üåê BLOCKCHAIN: Verified news authentication</div>
            <div class="ticker-item">üöÄ AR EXPERIENCE: Launch immersive news</div>
        </div>
    </div>

    <div class="quantum-loader"></div>

    <main>
        <div style="text-align: center; margin: 30px 0;">
            <div class="blockchain-badge">
                üîó BLOCKCHAIN VERIFIED ‚Ä¢ 100% AUTHENTIC CONTENT
            </div>
        </div>

        <div class="news-grid">
            <div class="news-card-3d">
                <img src="https://images.unsplash.com/photo-1586227740560-8cf2732c1531?w=400" alt="AI News">
                <div class="card-content">
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 15px;">
                        <span style="background: var(--ai-color); color: black; padding: 5px 15px; border-radius: 15px; font-size: 12px; font-weight: bold;">AI PREDICTION</span>
                        <div class="sentiment-meter" style="width: 100px;">
                            <div class="sentiment-fill" style="width: 87%;"></div>
                        </div>
                    </div>
                    <h3 style="margin-bottom: 10px; font-size: 20px;">Quantum Computing Breakthrough Revolutionizes AI Analysis</h3>
                    <p style="color: #ccc; margin-bottom: 15px;">Scientists achieve unprecedented processing speeds using quantum algorithms for real-time news analysis.</p>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span style="color: var(--ai-color); font-size: 12px;">üîó Blockchain Verified</span>
                        <button class="ai-feature-btn" onclick="generateSummary()" style="padding: 8px 15px; font-size: 12px;">ü§ñ Summary</button>
                    </div>
                </div>
            </div>

            <div class="news-card-3d">
                <img src="https://images.unsplash.com/photo-1635070041078-e363dbe005cb?w=400" alt="Tech News">
                <div class="card-content">
                    <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 15px;">
                        <span style="background: #ff4444; color: white; padding: 5px 15px; border-radius: 15px; font-size: 12px; font-weight: bold;">BREAKING</span>
                        <div class="sentiment-meter" style="width: 100px;">
                            <div class="sentiment-fill" style="width: 45%;"></div>
                        </div>
                    </div>
                    <h3 style="margin-bottom: 10px; font-size: 20px;">Neural Networks Achieve Human-Level Understanding of Complex Events</h3>
                    <p style="color: #ccc; margin-bottom: 15px;">Advanced AI systems now demonstrate contextual understanding previously thought impossible for machines.</p>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span style="color: var(--ai-color); font-size: 12px;">üîó Blockchain Verified</span>
                        <button class="ai-feature-btn" onclick="analyzeSentiment()" style="padding: 8px 15px; font-size: 12px;">üòä Sentiment</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="ar-section">
            <h2 style="margin-bottom: 15px; font-size: 32px;">üîÆ Augmented Reality News</h2>
            <p style="margin-bottom: 25px; font-size: 18px;">Experience news like never before with our immersive AR technology</p>
            <button onclick="launchAR()" style="background: white; color: black; border: none; padding: 15px 30px; border-radius: 25px; font-size: 18px; font-weight: bold; cursor: pointer; transition: all 0.3s;">
                üöÄ Launch AR Experience
            </button>
        </div>
    </main>

    <div class="ai-panel" id="aiPanel">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h3 style="color: var(--ai-color);">TRUVANI AI Assistant</h3>
            <button onclick="closeAIPanel()" style="background: none; border: none; color: white; font-size: 20px; cursor: pointer;">‚úñ</button>
        </div>
        
        <div class="ai-features">
            <button class="ai-feature-btn" onclick="generateSummary()">
                üìù AI Summary
            </button>
            <button class="ai-feature-btn" onclick="translateArticle()">
                üåê Translate
            </button>
            <button class="ai-feature-btn" onclick="textToSpeech()">
                üîä Read Aloud
            </button>
            <button class="ai-feature-btn" onclick="analyzeSentiment()">
                üòä Sentiment Analysis
            </button>
            <button class="ai-feature-btn" onclick="factCheck()">
                ‚úÖ Fact Check
            </button>
            <button class="ai-feature-btn" onclick="quantumAnalysis()">
                üîÆ Quantum Analysis
            </button>
        </div>
        
        <div class="sentiment-widget" style="margin-top: 20px;">
            <h4>Real-time Sentiment Analysis</h4>
            <div class="sentiment-meter">
                <div class="sentiment-fill" id="sentimentFill" style="width: 65%;"></div>
            </div>
            <div style="display: flex; justify-content: space-between; font-size: 12px;">
                <span>Negative</span>
                <span>Neutral</span>
                <span>Positive</span>
            </div>
        </div>
    </div>

    <script>
        // 1. Toast Notification System
        function showToast(title, message, type = 'info') {
            const container = document.getElementById('toastContainer');
            
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div class="toast-title">${title}</div>
                <div>${message}</div>
            `;
            
            container.appendChild(toast);
            setTimeout(() => {
                toast.classList.add('toast-show');
            }, 10);

            setTimeout(() => {
                toast.classList.remove('toast-show');
                setTimeout(() => {
                    container.removeChild(toast);
                }, 500); 
            }, 4000);
        }
        
        // 2. AI Assistant Functions
        function toggleAIPanel() {
            const panel = document.getElementById('aiPanel');
            panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
        }

        function closeAIPanel() {
            document.getElementById('aiPanel').style.display = 'none';
        }

        // 3. Voice Search (Integrated)
        function startVoiceSearch() {
            if ('webkitSpeechRecognition' in window) {
                const recognition = new webkitSpeechRecognition();
                recognition.continuous = false;
                recognition.interimResults = false;
                
                showToast('üé§ Voice Search', 'Listening for your command...', 'info');

                recognition.onresult = function(event) {
                    const transcript = event.results[0][0].transcript;
                    document.getElementById('aiSearchInput').value = transcript;
                    showToast('‚úÖ Command Received', `Searching for: "${transcript}"`, 'success');
                    processVoiceCommand(transcript);
                };
                
                recognition.onerror = function(event) {
                     showToast('‚ùå Voice Error', 'Could not recognize command.', 'error');
                };

                recognition.start();
            } else {
                showToast('‚ùå Browser Error', "Voice search not fully supported in your browser.", 'error');
            }
        }

        // 4. AI Features (Using Toast)
        function generateSummary() {
            showToast('ü§ñ AI SUMMARY', 'Breakthrough advancements in quantum computing...', 'info');
        }

        function analyzeSentiment() {
            const sentiment = Math.random() * 100;
            document.getElementById('sentimentFill').style.width = sentiment + '%';
            showToast('üòä SENTIMENT ANALYSIS', `Score: ${sentiment.toFixed(1)}% Positive`, 'success');
        }

        function quantumAnalysis() {
            showToast('üîÆ QUANTUM ANALYSIS', 'News credibility: 98.7%', 'success');
        }

        function launchAR() {
            showToast('üöÄ AR EXPERIENCE', 'Launching immersive AR technology...', 'info');
        }
        
        function translateArticle() {
            showToast('üåê TRANSLATE', 'Translating content to Hindi.', 'info');
        }

        function textToSpeech() {
            showToast('üîä READ ALOUD', 'Starting text-to-speech for the article.', 'info');
        }

        function factCheck() {
            showToast('‚úÖ FACT CHECK', 'Verifying facts against blockchain records. 100% Verified.', 'success');
        }


        // 5. Process Voice Commands (Example)
        function processVoiceCommand(command) {
            command = command.toLowerCase();
            if (command.includes('summary')) {
                generateSummary();
            } else if (command.includes('sentiment')) {
                analyzeSentiment();
            } else if (command.includes('ar') || command.includes('augmented')) {
                launchAR();
            }
        }
    </script>
</body>
</html>
