    <script>
        // Display login time
        document.getElementById('loginTime').textContent = new Date().toLocaleString('en-IN');

        // Form submission
        document.getElementById('newsForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const title = document.getElementById('newsTitle').value;
            const category = document.getElementById('newsCategory').value;
            const content = document.getElementById('newsContent').value;
            const author = document.getElementById('newsAuthor').value;
            
            // Create new news item
            const newsItem = document.createElement('div');
            newsItem.className = 'news-item';
            newsItem.innerHTML = `
                <div class="news-item-content">
                    <h3>${title}</h3>
                    <div class="news-item-meta">${category} â€¢ By ${author} â€¢ Just now â€¢ 0 views</div>
                </div>
                <div>
                    <button class="btn btn-edit" onclick="editNews(0)">âœï¸ Edit</button>
                    <button class="btn btn-danger" onclick="deleteNews(0, this)">ğŸ—‘ï¸ Delete</button>
                </div>
            `;
            
            // Add to list
            document.getElementById('newsList').insertBefore(newsItem, document.getElementById('newsList').firstChild);
            
            alert('âœ… Article Published Successfully!\n\nTitle: ' + title + '\nCategory: ' + category);
            this.reset();
            document.getElementById('newsAuthor').value = 'Nitin Choudhary';
        });

        function saveDraft() {
            const title = document.getElementById('newsTitle').value;
            if (!title) {
                alert('âš ï¸ Please enter a title first!');
                return;
            }
            alert('ğŸ’¾ Article saved as draft successfully!\n\nTitle: ' + title);
        }

        function editNews(id) {
            alert('âœï¸ Editing article #' + id + '\n\nThis feature will allow you to modify existing articles.\n\nIn a full version, this would open the article in the form above.');
        }

        function deleteNews(id, button) {
            if(confirm('âš ï¸ Are you sure you want to delete this article?\n\nThis action cannot be undone.')) {
                const newsItem = button.closest('.news-item');
                newsItem.style.transition = 'opacity 0.3s';
                newsItem.style.opacity = '0';
                setTimeout(() => {
                    newsItem.remove();
                    alert('ğŸ—‘ï¸ Article #' + id + ' deleted successfully!');
                }, 300);
            }
        }
    </script>
